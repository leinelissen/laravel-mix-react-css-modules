    "babel-plugin-react-css-modules"
  ],
  "author": "Lei Nelissen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leinelissen/laravel-mix-react-css-modules/issues"
  },
  "homepage": "https://github.com/leinelissen/laravel-mix-react-css-modules#readme",
  "peerDependencies": {
    "laravel-mix": "^5.0.1"
  },
  "dependencies": {
    "babel-plugin-react-css-modules": "^3.4.2",
