{
  "name": "laravel-mix-react-css-modules",
  "version": "2.0.0",
  "description": "A React CSS Modules plugin for Laravel Mix",
  "main": "dist/index.js",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.m.js",
  "source": "src/index.js",
  "scripts": {
